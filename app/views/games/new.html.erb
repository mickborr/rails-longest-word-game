<div class="container">
  <h1>New game</h1>

  <div>
    <ul id="list_letters">
      <% @letters.each do |letter| %>
        <li id="letter"><%= letter  %></li>
      <% end %>
    </ul>
  </div>



  <p id="question">What is the longest word you can find ?</p>

  <form action="new">
    <input id="input_text" type="text" name="word">
    <input id="send" type="submit" value="Play">
  </form>
</div>

